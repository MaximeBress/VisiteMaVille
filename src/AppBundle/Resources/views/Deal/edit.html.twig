{% extends 'AppBundle::layout.html.twig' %}
{% block title %}Modification de bon plan{% endblock %}

{% block body %}

    <div class="">

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Modification de bon plan</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br/>
                        {{ form_start(form) }}
                            <div class="form-group">
                                <label>Catégorie</label>
                                {{ form_widget(form.category) }}
                            </div>
                            <div class="form-group">
                                <label>Nom du bon plan</label>
                                {{ form_widget(form.name) }}
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                {{ form_widget(form.description) }}
                            </div>
                            <div class="form-group">
                                <label>Prix (en euros)</label>
                                {{ form_widget(form.price, { 'type':'number' }) }}
                            </div>
                            <div class="form-group">
                                <label>Durée (en mois)</label>
                                {{ form_widget(form.duration, { 'type':'number' }) }}
                            </div>
                            <div class="form-group">
                                <label>Nombre de bon plan</label>
                                {{ form_widget(form.availability, { 'type':'number' }) }}
                            </div>
                            {{ form_widget(form.submit) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
